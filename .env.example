# Application
NODE_ENV=development
PORT=3000
APP_NAME=Hivork
APP_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=hivork
DATABASE_PASSWORD=hivork_secret_pass_2024
DATABASE_NAME=hivork_db
DATABASE_URL=postgresql://hivork:hivork_secret_pass_2024@localhost:5432/hivork_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=hivork_redis_pass_2024
REDIS_URL=redis://:hivork_redis_pass_2024@localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=7d

# SMS Service (SMS.ir)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_NUMBER=your-sender-number

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=Hivork <noreply@hivork.com>

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,xlsx,csv

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Sentry
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Frontend URLs
FLUTTER_APP_URL=http://localhost:8080
ADMIN_URL=http://localhost:4200
LANDING_PAGE_URL=http://localhost:3001

# Cors
CORS_ORIGINS=http://localhost:4200,http://localhost:8080,http://localhost:3001

# Log Level
LOG_LEVEL=debug
